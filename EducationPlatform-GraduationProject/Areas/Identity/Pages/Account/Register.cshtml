@page
@model RegisterModel
@{
    ViewData["Title"] = "Add New Student";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/new.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="w-100 h-100 GrandParent " style="width:100vw">
        <div class="parent">
            <h1 class="form-title">اضافة طالب جديد</h1>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">          
                <div class="main-user-info">

                    <div class="user-input-box">
                        <label asp-for="Input.StudentName">اسم الطالب</label>
                        <input asp-for="Input.StudentName" class="form-control" aria-required="true" onchange="NameChange()" required>
                        <span id="ValidName" style="display: none; color: red;"></span>
                       
                    </div>
                    <div class="user-input-box">
                        <label asp-for="Input.Address">العنوان</label>
                        <input asp-for="Input.Address" class="form-control" aria-required="true" onchange="AddressChange()">
                        <span id="ValidAddress" style="display: none; color: red;"></span>
                        
                    </div>
                    <div class="user-input-box">
                        <label asp-for="Input.Phone">رقم الهاتف</label>
                        <input asp-for="Input.Phone" class="form-control" aria-required="true" onchange="PhoneChange()">
                        <span id="ValidPhone" style="display: none; color: red;"></span>
                        
                    </div>

                    <div class="user-input-box">
                        <label asp-for="Input.Email">اسم المستخدم</label>
                        <input asp-for="Input.Email" class="form-control" aria-required="true" onchange="UserNameChange()" />
                        <span id="ValidUserName" style="display: none; color: red;"></span>
                        
                    </div>

                    <div class="user-input-box">
                        <label asp-for="Input.Password">كلمةالمرور</label>
                        <input asp-for="Input.Password" class="form-control" aria-required="true" onchange="PasswordChange()">
                        <span id="ValidPassword" style="display: none; color: red;"></span>
                       
                    </div>
                    <div class="user-input-box">
                        <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" onchange="ConfirmPasswordChange()">
                        <span id="ValidConfirmPassword" style="display: none; color: red;"></span>
                        
                    </div>
                    <div class="user-input-box">
                        <label asp-for="Input.ClassID">الصف الدراسي</label>
                        <select asp-for="Input.ClassID" class="form-control" aria-required="true" style="width: 100%;
                      height: 40px; margin-top: 10px; margin-left: 10px;">
                            <option value="1" selected>الصف الأول الثانوي</option>
                            <option value="2">الصف الثاني الثانوي</option>
                            <option value="3">الصف الثالث الثانوي</option>
                        </select>
                        
                    </div>
                    <div class="user-input-box">
                        <label asp-for="Input.RegistedDate">تاريخ التسجيل :</label>
                        <input asp-for="Input.RegistedDate" class="form-control" aria-required="true" placeholder="Enter Regisre Date" style="width: 100%; height: 40px; margin-top:10px;margin-right: 10px; ">
                        
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-field col-lg-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">إضافة الطالب</button>
                    </div>
                </div>
            </form>            
        </div>
    </div>
    <script src="~/js/script.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
</body>

</html>