
@model EducationPlatform_GraduationProject.Models.Student

@{
    ViewData["Title"] = "UpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/new.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="w-100 h-100 GrandParent " style="width:100vw">
        <div class="parent">
            <h1 class="form-title">تعديل بيانات طالب</h1>
            <form asp-action="UpdateStudent" asp-controller="Teacher" method="post" onsubmit="return validateForm()">                
                <input type="hidden" asp-for="StId" />
                <div class="main-user-info">
                    <div class="user-input-box">
                        <label asp-for="StName">اسم الطالب</label>
                        <input asp-for="StName" class="form-control" aria-required="true" onchange="NameChange()" required>
                        <span id="ValidName" style="display: none; color: red;"></span>
                       
                    </div>
                    <div class="user-input-box">
                        <label asp-for="Address">العنوان</label>
                        <input asp-for="Address" class="form-control" aria-required="true" onchange="AddressChange()">
                        <span id="ValidAddress" style="display: none; color: red;"></span>
                        
                    </div>
                    <div class="user-input-box">
                        <label asp-for="Phone">رقم الهاتف</label>
                        <input asp-for="Phone" class="form-control" aria-required="true" onchange="PhoneChange()">
                        <span id="ValidPhone" style="display: none; color: red;"></span>
                        
                    </div>
                    <div class="user-input-box">
                        <label asp-for="ClassID">الصف الدراسي</label>
                        <select asp-for="ClassID" class="form-control" aria-required="true" style="width: 100%;
                      height: 38px; margin-right: 9px;">
                            <option value="1" selected>الصف الأول الثانوي</option>
                            <option value="2">الصف الثاني الثانوي</option>
                            <option value="3">الصف الثالث الثانوي</option>
                        </select>
                        <span asp-validation-for="ClassID" class="text-danger"></span>
                    </div>
                    <div class="user-input-box">
                        <label asp-for="RegistedDate">تاريخ التسجيل :</label>
                        <input asp-for="RegistedDate" class="form-control" aria-required="true" placeholder="Enter Regisre Date"                              style="width: 96%; height: 38px; margin-top:10px;">
                        <span asp-validation-for="RegistedDate" class="text-danger"></span>
                    </div>

                    <div class="user-input-box" style="display:none">
                        <label asp-for="IdentityUserId">اسم المستخدم</label>
                        <input asp-for="IdentityUserId" class="form-control" aria-required="true" onchange="UserNameChange()" />
                        <span id="ValidUserName" style="display: none; color: red;"></span>

                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-field col-lg-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">تعديل</button>
                    </div>
                </div>
            </form>
            <a asp-action="Index" asp-controller="Teacher" asp-route-id="@Model.ClassID" class="w-100 btn btn-lg btn-primary">الرجوع</a>
        </div>
    </div>
    <script src="~/js/UpdateStudent.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
</body>

</html>