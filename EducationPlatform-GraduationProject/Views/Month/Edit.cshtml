@model EducationPlatform_GraduationProject.ViewModels.ReceveMonth

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head
{
    <style>        
        body {
            font-family: "Amiri", serif;
            background-image: url('../../Images/download.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .bn31 {
            background-image: linear-gradient(to right,rgb(141, 121, 231) 30%, rgb(13, 5, 51) 100%);
            border-radius: 40px;
            box-sizing: border-box;
            color: white;
            display: block;
            height: 50px;
            font-size: 1.4em;
            padding: 4px;
            position: relative;
            text-decoration: none;
            width: 8em;
            z-index: 2;
            margin-top: 30px;
        }

        .bn31:hover {
            color: darkcyan;
            background-image: linear-gradient(to right,rgb(251, 250, 252) 0%, rgb(248, 248, 250) 100%);
        }

        label {
            font-size: 25px;
            font-weight: bold;
            color: rgb(0, 0, 0);
            margin-top: 20px;
        }

        select {
            border-style: solid;
            height: 40px !important;            
            width: 95%;
            border-radius: 10px;
            font-weight: bold;
            font-size: 20px!important;
        }
    </style>
}

<h2 style="margin-top: 7rem;text-align: center;font-size: 3rem;font-weight: 600;text-shadow: 2px 2px 4px rgba(179, 147, 211, 0.1); text-shadow: 1px 1px 1px #000000, 1px 2px 1px #957dad, 1px 3px 1px #000000, 1px 4px 1px #957dad, 1px 5px 1px #8a63b1, 1px 6px 1px #8a63b1, 1px 10px 5px rgba(16, 16, 16, 0.5), 1px 15px 10px rgba(16, 16, 16, 0.4), 1px 20px 30px rgba(16, 16, 16, 0.3), 1px 25px 50px rgba(16, 16, 16, 0.2);
    color: white;">
    تعديل حجز الطالب
</h2>
<div class="form-group" style="display: inline; margin-right:2rem;">
    <label class="control-label" type="text" style="margin-top: 0px;font-size: 2rem;display: inline;">اسم الطالب</label>
    <input asp-for="StudentName" class="form-control" style="font-weight: bold;font-size: 1.5rem;height: 40px; width: 20%;border-radius: 10px; margin-right: 1rem; display: inline;" readonly />
</div>
    <div>
            <form asp-action="Edit" asp-controller="Month">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="form-group" style="display:none">
                        <label asp-for="StID" class="control-label"></label>
                        <input asp-for="StID" class="form-control" />
                        <span asp-validation-for="StID" class="text-danger"></span>
                    </div>               
                <hr/>
                <div class="row" style="width: 100%;">
                    <div class="col-4" style="display: grid;">
                        <label asp-for="Jan">يناير</label>
                        <select asp-for="Jan" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                        <label asp-for="Feb">فبراير</label>
                        <select asp-for="Feb" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                        <label asp-for="Mar">مارس</label>
                        <select asp-for="Mar" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                        <label asp-for="Apr">أبريل</label>
                        <select asp-for="Apr" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>

                    </div>
                    <div class="col-4" style="display: grid;">
                        <label asp-for="May">مايو</label>
                        <select asp-for="May" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                        <label asp-for="Jun">يونيو</label>
                        <select asp-for="Jun" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>

                        <label asp-for="Jul">يوليو</label>
                        <select asp-for="Jul" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                        <label asp-for="Aug">أغسطس</label>
                        <select asp-for="Aug" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                    </div>
                    <div class="col-4" style="display: grid;">
                        <label asp-for="Sep">سبتمبر</label>
                        <select asp-for="Sep" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>

                        <label asp-for="Oct">أكتوبر</label>
                        <select asp-for="Oct" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                        <label asp-for="Nov">نوفمبر</label>
                        <select asp-for="Nov" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>
                        <label asp-for="Dec">ديسمبر</label>
                        <select asp-for="Dec" class="form-select">
                            <option value="False" selected>لم يتم الحجز</option>
                            <option value="True">تم الحجز</option>
                        </select>

                    </div>
                </div>
                <div class="form-group" style="margin-right: 42%;">
                    <input type="submit" value="حفظ" class="bn31"/>
                    
                </div>
            </form>
    @{
        if (ViewBag.Classid != null)
        {
            int id = ViewBag.Classid;
            <div>
                <a class="btn btn-success" style="text-align: center;width: 8rem;border-radius: 20px; font-weight: bold;" asp-action="GetAllStudent" asp-controller="Teacher" asp-route-id="@id">الرجوع</a>
            </div>
        }
    }
    </div>
